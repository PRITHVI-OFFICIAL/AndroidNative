<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"

            android:text="Product Page"
            android:textAlignment="center"
            android:textFontWeight="900"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/armchair_6"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="30dp"
                android:text="â‚¹6999"
                android:textColor="#dbbf41"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_900"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="1.5dp"
                app:cornerRadius="100dp"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:iconTint="@color/white"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/teal_900"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black_300"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black_300"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Turn Your House"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Into Your Dream Home"
                    android:textSize="23sp"

                    android:textFontWeight="900"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:text="Surround yourself with modern furniture and enjoy good quality of life"
                    android:textFontWeight="900"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ipsum a arcu cursus vitae congue mauris rhoncus aenean. Aliquam faucibus purus in massa tempor nec. Nascetur ridiculus mus mauris vitae. Dictum sit amet justo donec enim diam. Augue ut lectus arcu bibendum at varius. Mus mauris vitae ultricies leo integer malesuada nunc vel. Ac odio tempor orci dapibus ultrices in iaculis. Auctor augue mauris augue neque." />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50dp">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        app:icon="@drawable/icon_arrow_forward"
                        app:iconGravity="end"
                        style="@style/OptionsButton_Active"
                        app:cornerRadius="50dp"
                        android:paddingHorizontal="20dp"
                        android:layout_marginRight="0dp"
                        android:elevation="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="-1dp">

    </LinearLayout>

</FrameLayout>